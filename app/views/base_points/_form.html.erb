<%= form_with(model: @base_point, local: true) do |f| %>
  <%= render partial: 'shared/error_messages', object: @base_point, as: :error_check %>
  
  <%= f.label :point_name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :point_name, class: "form-control" %>
  <%= f.label :point_type, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :point_type, class: "form-control" %>
  <%= f.label :point_number, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :point_number, class: "form-control" %>
  
  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>
